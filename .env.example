# ============================================================================
# VinPed Bank - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vinped_bank
DB_USER=postgres
DB_PASSWORD=postgres

# For production, use full DATABASE_URL (Railway, Render, Supabase, etc.)
# DATABASE_URL=postgresql://user:password@host:port/database

# ============================================================================
# Backend Configuration
# ============================================================================
PORT=5000
NODE_ENV=development

# ============================================================================
# JWT Configuration
# ============================================================================
# IMPORTANT: Change this in production! Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=30d

# ============================================================================
# CORS Configuration
# ============================================================================
# Development
CORS_ORIGIN=http://localhost:3000

# Production (update with your Vercel domain)
# CORS_ORIGIN=https://your-app.vercel.app

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Frontend Configuration
# ============================================================================
# Development
VITE_API_URL=http://localhost:5000/api

# Production (update with your backend domain)
# VITE_API_URL=https://your-api.railway.app/api
